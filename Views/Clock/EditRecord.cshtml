@model SummerSplashWeb.Models.ClockRecord
@{
    ViewData["Title"] = "Edit Clock Record";
    var locations = ViewBag.Locations as List<SummerSplashWeb.Models.JobLocation> ?? new List<SummerSplashWeb.Models.JobLocation>();
}

<div class="content-area">
    <div class="mb-3">
        <a href="@Url.Action("WorkHistoryByDay", new { date = Model.ClockInTime.Date })" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Daily History
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card" style="border: none; border-radius: 15px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);">
        <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 15px 15px 0 0;">
            <h5 class="mb-0">
                <i class="bi bi-pencil me-2"></i>Edit Clock Record
            </h5>
        </div>
        <div class="card-body p-4">
            <!-- Employee Info -->
            <div class="alert alert-info mb-4">
                <div class="d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                         style="width: 50px; height: 50px; font-size: 20px;">
                        @(Model.UserName?.Substring(0, 1) ?? "?")
                    </div>
                    <div>
                        <h5 class="mb-0">@(Model.UserName ?? "Unknown Employee")</h5>
                        <small class="text-muted">Record #@Model.RecordId - @Model.ClockInTime.ToString("MMMM d, yyyy")</small>
                    </div>
                </div>
            </div>

            <form method="post" asp-action="EditRecord" asp-route-id="@Model.RecordId">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="RecordId" />
                <input type="hidden" asp-for="UserId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="LocationId" class="form-label fw-semibold">
                            <i class="bi bi-geo-alt me-1"></i>Location
                        </label>
                        <select asp-for="LocationId" class="form-select">
                            @foreach (var loc in locations)
                            {
                                <option value="@loc.LocationId" selected="@(loc.LocationId == Model.LocationId)">@loc.Name</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-calendar me-1"></i>Date
                        </label>
                        <input type="date" class="form-control" value="@Model.ClockInTime.ToString("yyyy-MM-dd")" disabled />
                        <small class="text-muted">Date cannot be changed</small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ClockInTime" class="form-label fw-semibold">
                            <i class="bi bi-box-arrow-in-right me-1 text-success"></i>Clock In Time
                        </label>
                        <input type="datetime-local" asp-for="ClockInTime" class="form-control"
                               value="@Model.ClockInTime.ToString("yyyy-MM-ddTHH:mm")" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ClockOutTime" class="form-label fw-semibold">
                            <i class="bi bi-box-arrow-right me-1 text-danger"></i>Clock Out Time
                        </label>
                        @if (Model.ClockOutTime.HasValue)
                        {
                            <input type="datetime-local" asp-for="ClockOutTime" class="form-control"
                                   value="@Model.ClockOutTime.Value.ToString("yyyy-MM-ddTHH:mm")" />
                        }
                        else
                        {
                            <input type="datetime-local" name="ClockOutTime" class="form-control" />
                            <small class="text-muted">Leave empty if still working</small>
                        }
                    </div>

                    @if (Model.TotalHours.HasValue)
                    {
                        <div class="col-12">
                            <div class="alert alert-secondary">
                                <i class="bi bi-clock me-1"></i>
                                <strong>Current Total Hours:</strong>
                                @{
                                    var hrs = (int)Model.TotalHours.Value;
                                    var mins = (int)((Model.TotalHours.Value - hrs) * 60);
                                }
                                @hrs h @mins m
                                <small class="text-muted">(will be recalculated on save)</small>
                            </div>
                        </div>
                    }

                    <div class="col-12 mt-4">
                        <hr>
                        <div class="d-flex gap-2 justify-content-end">
                            <a href="@Url.Action("WorkHistoryByDay", new { date = Model.ClockInTime.Date })" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-warning mt-4">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>Note:</strong> Editing clock records should only be done to correct errors.
        All changes are logged for auditing purposes.
    </div>
</div>

<style>
    .form-control, .form-select {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 10px 14px;
        transition: all 0.3s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 10px;
        padding: 12px 24px;
        font-weight: 600;
    }
</style>

@using SummerSplashWeb.Models
@{
    ViewData["Title"] = "Time Clock";
    var users = ViewBag.Users as List<User> ?? new List<User>();
    var activeShifts = ViewBag.ActiveShifts as List<ClockRecord> ?? new List<ClockRecord>();
    var todaysRecords = ViewBag.TodaysRecords as List<ClockRecord> ?? new List<ClockRecord>();
    var locations = ViewBag.Locations as List<JobLocation> ?? new List<JobLocation>();
}

<div class="content-area">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-clock-history me-2"></i>Time Clock</h2>
            <p class="text-muted mb-0">Clock in or out employees</p>
        </div>
        <div class="text-end">
            <div class="fs-5 fw-bold text-primary">@DateTime.Now.ToString("h:mm tt")</div>
            <small class="text-muted">@DateTime.Now.ToString("dddd, MMM d, yyyy")</small>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-person-check-fill" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        <h3 class="mb-0">@activeShifts.Count</h3>
                        <small>Currently Clocked In</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-people-fill" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        <h3 class="mb-0">@users.Count(u => u.IsActive)</h3>
                        <small>Total Employees</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-clock" style="font-size: 2.5rem;"></i>
                    </div>
                    <div>
                        @{
                            var completedToday = todaysRecords.Count(r => r.ClockOutTime.HasValue);
                        }
                        <h3 class="mb-0">@completedToday</h3>
                        <small>Shifts Completed Today</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" id="employeeSearch" class="form-control" placeholder="Search employee by name...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="filterStatus" id="filterAll" value="all" checked>
                        <label class="btn btn-outline-secondary" for="filterAll">All</label>
                        <input type="radio" class="btn-check" name="filterStatus" id="filterClockedIn" value="in">
                        <label class="btn btn-outline-success" for="filterClockedIn">Clocked In</label>
                        <input type="radio" class="btn-check" name="filterStatus" id="filterClockedOut" value="out">
                        <label class="btn btn-outline-secondary" for="filterClockedOut">Not Clocked In</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Cards -->
    <div class="row" id="employeeGrid">
        @foreach (var user in users.Where(u => u.IsActive).OrderBy(u => u.FirstName))
        {
            var isClockedIn = activeShifts.Any(s => s.UserId == user.UserId);
            var activeShift = activeShifts.FirstOrDefault(s => s.UserId == user.UserId);
            var todayRecords = todaysRecords.Where(r => r.UserId == user.UserId).ToList();
            var todayHours = todayRecords.Where(r => r.TotalHours.HasValue).Sum(r => r.TotalHours!.Value);

            <div class="col-md-6 col-lg-4 col-xl-3 mb-4 employee-card"
                 data-name="@user.FirstName @user.LastName"
                 data-status="@(isClockedIn ? "in" : "out")">
                <div class="card h-100 @(isClockedIn ? "border-success border-2" : "") shadow-sm">
                    <div class="card-body">
                        <!-- Employee Header -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle d-flex align-items-center justify-content-center me-2 @(isClockedIn ? "bg-success" : "bg-secondary")"
                                     style="width: 45px; height: 45px; color: white; font-weight: bold;">
                                    @user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)
                                </div>
                                <div>
                                    <h6 class="mb-0">@user.FirstName @user.LastName</h6>
                                    <small class="text-muted">@(user.Position ?? "Employee")</small>
                                </div>
                            </div>
                            @if (isClockedIn)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-record-circle me-1"></i>Active
                                </span>
                            }
                        </div>

                        <!-- Current Status -->
                        @if (isClockedIn && activeShift != null)
                        {
                            var duration = DateTime.Now - activeShift.ClockInTime;
                            <div class="bg-success bg-opacity-10 rounded p-3 mb-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Clock In:</span>
                                    <strong class="text-success">@activeShift.ClockInTime.ToString("h:mm tt")</strong>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Location:</span>
                                    <span>@activeShift.LocationName</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Duration:</span>
                                    <strong>@((int)duration.TotalHours)h @duration.Minutes m</strong>
                                </div>
                            </div>

                            <form asp-action="ClockOut" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="recordId" value="@activeShift.RecordId" />
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-box-arrow-right me-2"></i>Clock Out
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="mb-3 text-center">
                                <small class="text-muted">Today's Hours:</small>
                                <div class="fs-4 fw-bold text-primary">@todayHours.ToString("F1") h</div>
                            </div>

                            <button type="button" class="btn btn-success w-100"
                                    data-bs-toggle="modal"
                                    data-bs-target="#clockInModal@(user.UserId)">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Clock In
                            </button>
                        }
                    </div>
                </div>

                <!-- Clock In Modal -->
                <div class="modal fade" id="clockInModal@(user.UserId)" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-success text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-clock me-2"></i>Clock In - @user.FirstName @user.LastName
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <form asp-action="ClockIn" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@user.UserId" />
                                <div class="modal-body">
                                    <div class="text-center mb-4">
                                        <div class="display-4 text-success fw-bold">@DateTime.Now.ToString("h:mm tt")</div>
                                        <small class="text-muted">Current Time</small>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold">
                                            <i class="bi bi-geo-alt me-1"></i>Select Location
                                        </label>
                                        <select name="locationId" class="form-select form-select-lg" required>
                                            <option value="">-- Choose Location --</option>
                                            @foreach (var loc in locations.Where(l => l.IsActive).OrderBy(l => l.Name))
                                            {
                                                <option value="@loc.LocationId">@loc.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="bi bi-check-circle me-2"></i>Clock In Now
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Today's Activity -->
    <div class="card mt-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-calendar-day me-2"></i>Today's Activity</h5>
            <span class="badge bg-secondary">@todaysRecords.Count records</span>
        </div>
        <div class="card-body p-0">
            @if (todaysRecords.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Employee</th>
                                <th>Location</th>
                                <th>Clock In</th>
                                <th>Clock Out</th>
                                <th>Hours</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in todaysRecords.OrderByDescending(r => r.ClockInTime))
                            {
                                <tr>
                                    <td><strong>@record.UserName</strong></td>
                                    <td>@record.LocationName</td>
                                    <td>
                                        <span class="badge bg-success">@record.ClockInTime.ToString("h:mm tt")</span>
                                    </td>
                                    <td>
                                        @if (record.ClockOutTime.HasValue)
                                        {
                                            <span class="badge bg-secondary">@record.ClockOutTime.Value.ToString("h:mm tt")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (record.TotalHours.HasValue)
                                        {
                                            var hrs = (int)record.TotalHours.Value;
                                            var mins = (int)((record.TotalHours.Value - hrs) * 60);
                                            <strong>@hrs h @mins m</strong>
                                        }
                                        else
                                        {
                                            var duration = DateTime.Now - record.ClockInTime;
                                            <span class="text-success">@((int)duration.TotalHours)h @duration.Minutes m</span>
                                        }
                                    </td>
                                    <td>
                                        @if (record.ClockOutTime.HasValue)
                                        {
                                            <span class="badge bg-secondary">Completed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-record-circle me-1"></i>Active
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-clock-history" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3 mb-0">No activity recorded today</p>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Search functionality
    document.getElementById('employeeSearch').addEventListener('input', function() {
        filterEmployees();
    });

    // Status filter
    document.querySelectorAll('input[name="filterStatus"]').forEach(function(radio) {
        radio.addEventListener('change', function() {
            filterEmployees();
        });
    });

    function filterEmployees() {
        var searchTerm = document.getElementById('employeeSearch').value.toLowerCase();
        var statusFilter = document.querySelector('input[name="filterStatus"]:checked').value;
        var cards = document.querySelectorAll('.employee-card');

        cards.forEach(function(card) {
            var name = card.getAttribute('data-name').toLowerCase();
            var status = card.getAttribute('data-status');
            var matchesSearch = name.includes(searchTerm);
            var matchesStatus = statusFilter === 'all' || status === statusFilter;

            card.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
        });
    }
</script>

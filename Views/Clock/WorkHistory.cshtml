@using SummerSplashWeb.Models
@{
    ViewData["Title"] = "Work History";
    var users = ViewBag.Users as List<User> ?? new List<User>();
    var locations = ViewBag.Locations as List<JobLocation> ?? new List<JobLocation>();
    var startDate = (DateTime)ViewBag.StartDate;
    var endDate = (DateTime)ViewBag.EndDate;
    var selectedUserId = ViewBag.SelectedUserId as int?;
    var selectedUser = ViewBag.SelectedUser as User;
    var clockRecords = ViewBag.ClockRecords as List<ClockRecord> ?? new List<ClockRecord>();
    var totalHours = (decimal)(ViewBag.TotalHours ?? 0m);
    var totalDays = ViewBag.TotalDays ?? 0;
    var avgHoursPerDay = ViewBag.AvgHoursPerDay ?? 0.0;
}

<div class="content-area">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-journal-check me-2"></i>Employee Work History</h2>
            <p class="text-muted mb-0">View detailed clock-in/out history and hours worked</p>
        </div>
    </div>

    <!-- Filter Card -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filter Work History</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Select Employee</label>
                    <select name="userId" class="form-select" required>
                        <option value="">-- Select Employee --</option>
                        @foreach (var user in users.Where(u => u.IsActive).OrderBy(u => u.FirstName))
                        {
                            <option value="@user.UserId" selected="@(selectedUserId == user.UserId)">
                                @user.FirstName @user.LastName (@(user.Position ?? "N/A"))
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Start Date</label>
                    <input type="date" name="startDate" class="form-control"
                           value="@startDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">End Date</label>
                    <input type="date" name="endDate" class="form-control"
                           value="@endDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-1"></i>View History
                    </button>
                </div>
            </form>

            <!-- Quick Date Ranges -->
            <div class="mt-3">
                <span class="text-muted me-2">Quick Select:</span>
                <a href="@Url.Action("WorkHistory", new { userId = selectedUserId, startDate = DateTime.Today.AddDays(-7), endDate = DateTime.Today })"
                   class="btn btn-sm btn-outline-secondary me-1">Last 7 Days</a>
                <a href="@Url.Action("WorkHistory", new { userId = selectedUserId, startDate = DateTime.Today.AddDays(-30), endDate = DateTime.Today })"
                   class="btn btn-sm btn-outline-secondary me-1">Last 30 Days</a>
                <a href="@Url.Action("WorkHistory", new { userId = selectedUserId, startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1), endDate = DateTime.Today })"
                   class="btn btn-sm btn-outline-secondary me-1">This Month</a>
                <a href="@Url.Action("WorkHistory", new { userId = selectedUserId, startDate = new DateTime(DateTime.Today.Year, 1, 1), endDate = DateTime.Today })"
                   class="btn btn-sm btn-outline-secondary">This Year</a>
            </div>
        </div>
    </div>

    @if (selectedUser != null)
    {
        <!-- Employee Info & Summary -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                                 style="width: 60px; height: 60px; font-size: 24px;">
                                @selectedUser.FirstName.Substring(0, 1)@selectedUser.LastName.Substring(0, 1)
                            </div>
                            <div>
                                <h5 class="mb-0">@selectedUser.FirstName @selectedUser.LastName</h5>
                                <small class="text-muted">@(selectedUser.Position ?? "Employee")</small>
                                <br /><small class="text-muted">@selectedUser.Email</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="row h-100">
                    <div class="col-md-4">
                        <div class="card bg-primary text-white h-100">
                            <div class="card-body">
                                <h6 class="mb-1">Total Hours</h6>
                                @{
                                    var hrs = (int)totalHours;
                                    var mins = (int)((totalHours - hrs) * 60);
                                }
                                <h2 class="mb-0">@hrs h @mins m</h2>
                                <small>@startDate.ToString("MMM d") - @endDate.ToString("MMM d, yyyy")</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success text-white h-100">
                            <div class="card-body">
                                <h6 class="mb-1">Days Worked</h6>
                                <h2 class="mb-0">@totalDays</h2>
                                <small>Unique work days</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info text-white h-100">
                            <div class="card-body">
                                <h6 class="mb-1">Avg Hours/Day</h6>
                                @{
                                    var avgHrs = (int)avgHoursPerDay;
                                    var avgMins = (int)((avgHoursPerDay - avgHrs) * 60);
                                }
                                <h2 class="mb-0">@avgHrs h @avgMins m</h2>
                                <small>Per work day</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Work History Table -->
        @if (clockRecords.Any())
        {
            <div class="card">
                <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-table me-2"></i>Clock History (@clockRecords.Count records)</h5>
                    <span class="badge bg-light text-dark">@totalDays days | @hrs h @mins m total</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Date</th>
                                    <th>Day</th>
                                    <th>Clock In</th>
                                    <th>Clock Out</th>
                                    <th>Location</th>
                                    <th>Hours Worked</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var record in clockRecords.OrderByDescending(r => r.ClockInTime))
                                {
                                    <tr>
                                        <td>
                                            <strong>@record.ClockInTime.ToString("MMM d, yyyy")</strong>
                                        </td>
                                        <td>@record.ClockInTime.ToString("dddd")</td>
                                        <td>
                                            <span class="badge bg-success">@record.ClockInTime.ToString("h:mm tt")</span>
                                        </td>
                                        <td>
                                            @if (record.ClockOutTime.HasValue)
                                            {
                                                <span class="badge bg-secondary">@record.ClockOutTime.Value.ToString("h:mm tt")</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Still Working</span>
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var location = locations.FirstOrDefault(l => l.LocationId == record.LocationId);
                                            }
                                            @(location?.Name ?? record.LocationName ?? "N/A")
                                        </td>
                                        <td>
                                            @if (record.TotalHours.HasValue)
                                            {
                                                var recHrs = (int)record.TotalHours.Value;
                                                var recMins = (int)((record.TotalHours.Value - recHrs) * 60);
                                                <span class="fw-bold">@recHrs h @recMins m</span>
                                            }
                                            else
                                            {
                                                var currentDuration = DateTime.Now - record.ClockInTime;
                                                var curHrs = (int)currentDuration.TotalHours;
                                                var curMins = currentDuration.Minutes;
                                                <span class="text-success">@curHrs h @curMins m (active)</span>
                                            }
                                        </td>
                                        <td>
                                            @if (record.ClockOutTime.HasValue)
                                            {
                                                <span class="badge bg-secondary">Completed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-record-circle me-1"></i>Active
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th colspan="5" class="text-end">Total:</th>
                                    <th><span class="badge bg-primary fs-6">@hrs h @mins m</span></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Weekly Summary -->
            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Weekly Summary</h5>
                </div>
                <div class="card-body">
                    @{
                        var weeklyGroups = clockRecords
                            .GroupBy(r => {
                                var diff = r.ClockInTime.Date.DayOfWeek - DayOfWeek.Sunday;
                                return r.ClockInTime.Date.AddDays(-diff);
                            })
                            .OrderByDescending(g => g.Key)
                            .Take(8);
                    }
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Week Starting</th>
                                    <th>Days Worked</th>
                                    <th>Total Hours</th>
                                    <th>Avg Hours/Day</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var week in weeklyGroups)
                                {
                                    var weekHours = week.Where(r => r.TotalHours.HasValue).Sum(r => r.TotalHours!.Value);
                                    var weekDays = week.Select(r => r.ClockInTime.Date).Distinct().Count();
                                    var weekAvg = weekDays > 0 ? weekHours / weekDays : 0;
                                    var wHrs = (int)weekHours;
                                    var wMins = (int)((weekHours - wHrs) * 60);
                                    var wAvgHrs = (int)weekAvg;
                                    var wAvgMins = (int)((weekAvg - wAvgHrs) * 60);
                                    <tr>
                                        <td>@week.Key.ToString("MMM d, yyyy")</td>
                                        <td>@weekDays days</td>
                                        <td><strong>@wHrs h @wMins m</strong></td>
                                        <td>@wAvgHrs h @wAvgMins m</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-clock-history" style="font-size: 4rem; color: #ccc;"></i>
                    <h4 class="mt-3 text-muted">No Records Found</h4>
                    <p class="text-muted">No clock records found for @selectedUser.FirstName @selectedUser.LastName in the selected date range.</p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-person-badge" style="font-size: 4rem; color: #ccc;"></i>
                <h4 class="mt-3 text-muted">Select an Employee</h4>
                <p class="text-muted">Please select an employee from the dropdown above to view their work history.</p>
            </div>
        </div>
    }
</div>
